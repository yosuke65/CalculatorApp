<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_bg">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:hint="search"
        android:drawableLeft="@drawable/ic_baseline_search_24"
        android:layout_margin="20dp"
        android:paddingRight="20dp"
        android:backgroundTint="#F2FFFFFF"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/icon"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/ic_baseline_adb_24"/>


        <TextView
            android:fontFamily="monospace"
            android:textSize="24dp"
            android:textColor="@color/colorBasic"
            android:textStyle="bold"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="30dp"
            android:text="Apolis"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:backgroundTint="@android:color/transparent"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp">


        <ImageView
            android:src="@drawable/ic_baseline_add_24"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/button_round_corner"
            android:onClick="countPlus"
            />
        <TextView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:textColor="#747CF5"
            android:padding="5dp"
            android:textSize="30dp"
            android:textStyle="bold"
            android:background="@drawable/bg_solid"
            android:text="0"
            android:textAlignment="center"
            android:id="@+id/count_value"
            />
        <ImageView
            android:src="@drawable/ic_baseline_remove_24"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/button_round_corner_right"
            android:onClick="countMinus"
            />

    </LinearLayout>


