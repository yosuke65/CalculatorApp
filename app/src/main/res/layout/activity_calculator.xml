<RelativeLayout xmlns:android = "http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:padding="15dp">

    <TextView
        android:id="@+id/reslut_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="90dp"
        android:textColor="@android:color/white"
        android:fontFamily="sans-serif-light"
        android:text="0"
        android:layout_alignParentRight="true"
        android:layout_above="@+id/calc_button"
        android:layout_margin="20dp"/>


    <LinearLayout
        android:id="@+id/calc_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:baselineAligned="false"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4">
            <com.example.lecture2.models.SquareButton
                android:id="@+id/button_clear"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="AC"
                android:textSize="30dp"
                android:fontFamily="sans-serif-light"
                android:textStyle="bold"
                android:layout_weight="1"
                android:layout_margin="7dp"
                android:background="@drawable/button_bg_round"/>
            <com.example.lecture2.models.SquareButton
                android:id="@+id/button_plus_minus"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="+/-"
                android:textSize="30dp"
                android:fontFamily="sans-serif-light"
                android:textStyle="bold"
                android:layout_weight="1"
                android:layout_margin="7dp"
                android:background="@drawable/button_bg_round"/>
            <com.example.lecture2.models.SquareButton
                android:id="@+id/button_percent"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="%"
                android:textSize="30dp"
                android:fontFamily="sans-serif-light"
                android:textStyle="bold"
                android:layout_weight="1"
                android:layout_margin="7dp"
                android:background="@drawable/button_bg_round"/>
            <com.example.lecture2.models.SquareButton
                android:id="@+id/button_div"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="/"
                android:textSize="30dp"
                android:fontFamily="sans-serif-light"
                android:textStyle="bold"
                android:layout_weight="1"
                android:layout_margin="7dp"
                android:textColor="@android:color/white"
                android:background="@drawable/button_bg_round_orange"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:baselineAligned="false"
            android:weightSum="4">
            <com.example.lecture2.models.SquareButton
                android:id="@+id/button_seven"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="7"
                android:textSize="30dp"
                android:fontFamily="sans-serif-light"
                android:textStyle="bold"
                android:layout_weight="1"
                android:layout_margin="7dp"
                android:textColor="@android:color/white"
                android:background="@drawable/button_bg_round_darkgrey"/>
            <com.example.lecture2.models.SquareButton
                android:id="@+id/button_eight"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="8"
                android:textSize="30dp"
                android:fontFamily="sans-serif-light"
                android:textStyle="bold"
                android:layout_weight="1"
                android:layout_margin="7dp"
                android:textColor="@android:color/white"
                android:background="@drawable/button_bg_round_darkgrey"/>
            <com.example.lecture2.models.SquareButton
                android:id="@+id/button_nine"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="9"
                android:textSize="30dp"
                android:fontFamily="sans-serif-light"
                android:textStyle="bold"
                android:layout_weight="1"
                android:layout_margin="7dp"
                android:textColor="@android:color/white"
                android:background="@drawable/button_bg_round_darkgrey"/>
            <com.example.lecture2.models.SquareButton
                android:id="@+id/button_mult"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="*"
                android:textSize="30dp"
                android:fontFamily="sans-serif-light"
                android:textStyle="bold"
                android:layout_weight="1"
                android:layout_margin="7dp"
                android:textColor="@android:color/white"
                android:background="@drawable/button_bg_round_orange"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:baselineAligned="false"
            android:weightSum="4">
            <com.example.lecture2.models.SquareButton
                android:id="@+id/button_four"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="4"
                android:textSize="30dp"
                android:fontFamily="sans-serif-light"
                android:textStyle="bold"
                android:layout_weight="1"
                android:layout_margin="7dp"
                android:textColor="@android:color/white"
                android:background="@drawable/button_bg_round_darkgrey"/>
            <com.example.lecture2.models.SquareButton
                android:id="@+id/button_five"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="5"
                android:textSize="30dp"
                android:fontFamily="sans-serif-light"
                android:textStyle="bold"
                android:layout_weight="1"
                android:layout_margin="7dp"
                android:textColor="@android:color/white"
                android:background="@drawable/button_bg_round_darkgrey"/>
            <com.example.lecture2.models.SquareButton
                android:id="@+id/button_six"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="6"
                android:textSize="30dp"
                android:fontFamily="sans-serif-light"
                android:textStyle="bold"
                android:layout_margin="7dp"
                android:textColor="@android:color/white"
                android:background="@drawable/button_bg_round_darkgrey"/>
            <com.example.lecture2.models.SquareButton
                android:id="@+id/button_minus"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="-"
                android:textSize="30dp"
                android:fontFamily="sans-serif-light"
                android:textStyle="bold"
                android:layout_weight="1"
                android:layout_margin="7dp"
                android:textColor="@android:color/white"
                android:background="@drawable/button_bg_round_orange"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:baselineAligned="false"
            android:weightSum="4">
            <com.example.lecture2.models.SquareButton
                android:id="@+id/button_one"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="1"
                android:textSize="30dp"
                android:fontFamily="sans-serif-light"
                android:textStyle="bold"
                android:layout_weight="1"
                android:layout_margin="7dp"
                android:textColor="@android:color/white"
                android:background="@drawable/button_bg_round_darkgrey"/>
            <com.example.lecture2.models.SquareButton
                android:id="@+id/button_two"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="2"
                android:textSize="30dp"
                android:fontFamily="sans-serif-light"
                android:textStyle="bold"
                android:layout_weight="1"
                android:layout_margin="7dp"
                android:textColor="@android:color/white"
                android:background="@drawable/button_bg_round_darkgrey"/>
            <com.example.lecture2.models.SquareButton
                android:id="@+id/button_three"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="3"
                android:textSize="30dp"
                android:fontFamily="sans-serif-light"
                android:textStyle="bold"
                android:layout_weight="1"
                android:layout_margin="7dp"
                android:textColor="@android:color/white"
                android:background="@drawable/button_bg_round_darkgrey"/>
            <com.example.lecture2.models.SquareButton
                android:id="@+id/button_sum"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="+"
                android:textSize="30dp"
                android:fontFamily="sans-serif-light"
                android:textStyle="bold"
                android:layout_weight="1"
                android:layout_margin="7dp"
                android:textColor="@android:color/white"
                android:background="@drawable/button_bg_round_orange"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:baselineAligned="true"
            android:weightSum="4">
            <com.example.lecture2.models.CustomButton
                android:id="@+id/button_zero"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="30dp"
                android:fontFamily="sans-serif-light"
                android:textStyle="bold"
                android:layout_weight="2"
                android:layout_margin="7dp"
                android:textColor="@android:color/white"
                android:background="@drawable/button_bg_round_custom"/>
            <com.example.lecture2.models.SquareButtonDotEqual
                android:id="@+id/button_point"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="."
                android:textSize="30dp"
                android:fontFamily="sans-serif-light"
                android:textStyle="bold"
                android:layout_weight="1"
                android:layout_margin="7dp"
                android:textColor="@android:color/white"
                android:background="@drawable/button_bg_round_darkgrey"/>
            <com.example.lecture2.models.SquareButtonDotEqual
                android:id="@+id/button_result"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="="
                android:textSize="30dp"
                android:fontFamily="sans-serif-light"
                android:textStyle="bold"
                android:layout_weight="1"
                android:layout_margin="7dp"
                android:textColor="@android:color/white"
                android:background="@drawable/button_bg_round_orange"/>
        </LinearLayout>



    </LinearLayout>

</RelativeLayout>