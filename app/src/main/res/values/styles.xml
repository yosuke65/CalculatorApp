<resources>
<!--     Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CustomEditText">
        <item name="android:textColor">@android:color/white</item>
        <item name="background">@drawable/transparent_bg</item>
        <item name="android:textColorHint">#66FFFFFF</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/default_margin_top</item>

    </style>

    <style name="CustomButtonAttr">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_margin">@dimen/default_margin_button</item>
    </style>

    <style name="ActivityTitle">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">sans-serif-light</item>
        <item name="android:textSize">20dp</item>
        <item name="android:layout_gravity">center</item>
    </style>


</resources>